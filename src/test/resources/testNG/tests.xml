<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="All tests Suite">
    <test name="Create Task Prompt">
        <classes>
            <class name="com.solvd.DisplayCreateTaskPromptTests">
                <methods>
                    <include name="displayCreateTaskPromptAfterLaunchTest"/>
                    <include name="displayCreateTaskPromptWhenTaskListEmptyTest"/>
                </methods>
            </class>
        </classes>
    </test>
    <test name="Add task">
        <classes>
            <class name="com.solvd.AddTasksTests">
                <methods>
                    <include name="addSimpleTaskTest"/>
                    <include name="addThreeSimpleTasksInRowTest"/>
                    <include name="dontAddEmptyTaskTest"/>
                    <include name="addTaskWithLongTextTest"/>
                    <include name="addTaskForTodayTest"/>
                    <include name="addTaskForTodayAtGivenTimeWithDefaultReminder"/>
                    <include name="addTaskForTomorrowTest"/>
                    <include name="addTaskForFutureWithPredefinedTimeAndReminderTest"/>
                    <include name="addTaskWithNoDateTest"/>
                </methods>
            </class>
        </classes>
    </test>
</suite>
